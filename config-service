server:
  port: 8888

spring:
  application:
    name: config-service
  profiles:
    active: docker
  cloud:
    config:
      server:
        git:
          uri: ${SPRING_CLOUD_CONFIG_SERVER_GIT_URI}
          default-label: main
          search-paths: {application}
          force-pull: true
          clone-on-start: true
          timeout: 60

management:
  endpoints:
    web:
      exposure:
        include: health,env
  endpoint:
    health:
      show-details: always
